<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
   <link rel="stylesheet" href="/cssLocal/forgotPass.css">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div class="login-container row">
        <div class="image-container col-md-6 d-none d-md-block">
            <img class="me-5" src="/imagesLocal/authPic.jpg" alt="Login Image">
        </div>
        <div class="form-container col-md-6">
            <div class="logo-container">
                <h2>STOP SHOPPERS </h2>
            </div>
            <form id="form" action="/forgotPass" method="post">
                <div class="input-container">
                    <div> 
                        
                            <p class="warn"><%= error %></p>
                        
                        
                        <input id="password" type="text" name="otp" class="input-field" placeholder="Enter the OTP">
                    </div>
                    <div class="forgot-password">
                        <a id="resend-tag" class="link" href="/resendOtp">Resend OTP</a>
                    </div>
                    <div style="color: rgb(0, 0, 0); font-size: small;" class="d-flex justify-content-center mt-3">
                        <p id="counterElement"></p>
                    </div>
                    <button type="submit" class="login-btn"><strong>Submit</strong></button>
                </div>
            </form>
        </div>
    </div>
    <script>
        updateCounter(30);
        // Function to update the counter
function updateCounter(count) {
    const tag = document.getElementById('resend-tag');
        tag.removeAttribute('href');
    
  // Display the current count value
  counterElement.textContent = "Resend OTP : " + count + " seconds";
  // Decrement the count
  count--;
  // Check if count has reached 0
  if (count >= 0) {
    // If not, schedule the next update after 1 second
    setTimeout(function() {
      updateCounter(count);
    }, 1000); // 1000 milliseconds = 1 second
  } else {
    // If count reaches 0, display a message or perform any desired action
    counterElement.textContent = "";
    tag.setAttribute('href','/resendOtp');
  }
}
    </script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
