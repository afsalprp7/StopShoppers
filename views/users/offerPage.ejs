<%- include('../includes/usersPartials/userHead.ejs') %>
<style>
.container-main{
  margin-top: 6%;  
}

</style>
<div style="min-height: 70vh;" class="container container-main mb-5">
  <div>
    <h2>OFFERS</h2>
  </div>
  <% if(offers.length > 0) { %>
    <% offers.forEach((item) => { %>
      <div class="border-bottom shadow-sm">
        <div style="background-color: rgba(149, 88, 255, 0.271);" class="mt-4 border rounded p-4 d-flex justify-content-center shadow offer-container">
          <div>
            <h1 style="color: #b04fff; text-transform: uppercase;">
              <%= item.offerName %> :- <%= item.offerValue %>% Discount For "<%= item.categoryInfo.categoryName %>"
            </h1>
          </div>
        </div>
        
        <div class="row">
          <% item.productInfo.forEach((product) => { %>
            <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women mt-5">
              <!-- Block2 -->
              <div class="block2">
                <div style="max-height: 350px;" class="block2-pic hov-img0">
                  <a href="/productDetail/<%= product._id %>">
                    <img src="/productImg/<%= product.image[0] %>" alt="IMG-PRODUCT">
                  </a>
                </div>
    
                <div class="block2-txt flex-w flex-t p-t-14">
                  <div class="block2-txt-child1 flex-col-l">
                    <a class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                      <%= product.productName %>
                    </a>
                    <% if(product.offer) { %>
                      <div>
                        <s class="stext-105 cl3">
                          ₹<%= product.offer.actualAmount %>
                        </s>
                        <span style="font-size: medium; color: #b04fff;" class="ms-2">
                          <%= product.offer.offerValue %>% OFF
                        </span>
                        <div>
                          <span style="font-size: medium;" class="stext-105 cl3 text-success">
                            ₹<%= product.productPrice %>
                          </span>
                        </div>
                      </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
        
      </div>
    <% }); %>
  <% } else { %>
    <div class="d-flex justify-content-center align-items-center mt-5">
      <h2 style="color: #b04fff;" class="mt-5">No Offers</h2>
    </div>
  <% } %>
</div>


