
<%- include('../includes/usersPartials/userHead.ejs') %>
<style>
  .container-main{
    margin-top: 5%;
  }
</style>
<div class="p-5 container-main">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <div class="card p-3">
          <div class="row g-0">
            <div class="col-md-4">
              <img
                src="./logo2.png"
                class="img-fluid rounded-start"
                alt="..."
              />
            </div>
            <div class="col-md-8">
              <div class="card-body border-bottom">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">
                  This is a wider card with supporting text below as a
                  natural lead-in to additional content. This content is a
                  little bit longer.
                </p>
                <p class="card-text">
                  <small class="text-muted">Last updated 3 mins ago</small>
                </p>
                <div class="quantity mt-4 d-flex justify-content-between">
                  <div style="display: inline-block;">
                    <strong>Qty : </strong>
                    <button
                      style="
                        background: none;
                        background-color: #717fe0;
                        border: none;
                        color: white;
                      "
                      class="quantity-minus px-2 rounded"
                    >
                      <strong>-</strong>
                    </button>
                    <span>
                    <input
                      style="border-width: 1px; text-align: center;display: inline-block;"
                      type="number"
                      class="quantity-input rounded border border-2"
                      value="1"
                      min="1"
                      max="10"
                    />
                  
                    <button
                      style="
                        background: none;
                        background-color: #717fe0;
                        border: none;
                        color: white;
                      "
                      class="quantity-plus px-2 rounded"
                    >
                      <strong>+</strong>
                    </button>
                  </div>

                  <div class="justify-content-end">
                    <strong id="price" class="text-danger">₹pirce here</strong>
                  </div>
                </div>
              </div>
              <div class="d-flex justify-content-end mt-4">
                <form action="">
                  <button
                    type="submit"
                    style="background-color: #717fe0; color: white"
                    class="btn"
                  >
                    Remove
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div style="background-color: white;
        box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.119);" class="border rounded p-3">
          <h4>Cart Total</h4>
          <div class="d-flex mt-3 border-bottom">
            <div style="flex: 0.5" class="mb-3">
              <strong>Product 1 Name :</strong>
            </div>
            <strong class="text-danger">₹ Price</strong>
          </div>
          <div class="mt-3 d-flex">
            <strong style="flex: 0.5">Total :</strong>
            <strong class="text-danger">₹pirce</strong>
          </div>
          <div class="d-flex justify-content-center">
            <button style="padding-left: 10%;padding-right: 10%;
            background-color: #717fe0;color: white;" class="btn  mt-5">Checkout</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>


  const quantityDiv = document.querySelectorAll(".quantity");
  const price = 1000;
  quantityDiv.forEach((div) => {
    const input = div.querySelector(".quantity-input ");
    const plus = div.querySelector(".quantity-plus");
    const minus = div.querySelector(".quantity-minus");
    const pricetag = div.querySelector('#price');
    
    plus.addEventListener("click", () => {
      if (input.value < 5) input.value = parseInt(input.value) + 1;
      pricetag.innerHTML = '₹' + price * input.value;
    });
    minus.addEventListener("click", () => {
      if (input.value > 1) input.value = parseInt(input.value) - 1;
      pricetag.innerHTML = '₹' + price * input.value;

    });
  });
</script>









