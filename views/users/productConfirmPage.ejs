
<%-include('../includes/usersPartials/userHead')%>

<style>
  .main-content{
   margin-top: 7%;
  }
  .content{
   font-family: 'Courier New', Courier, monospace;
   font-weight: bolder;
   font-size: xx-large;
 }
 .p-div {
    line-height: 40px;
  }
 </style>

<div class="container main-content p-5 border shadow mb-5">
  <div class=" d-flex justify-content-between">
    <div class="content">
      StopShoppers
    </div>
    <div>
      <span class="text-success">Order Confirmed</span><i class="fa-solid fa-circle-check text-success"></i>
    </div>
  </div>
    <div class="mt-3 border-bottom">
      <h1 class="text-success">Order Placed Successfully</h1>
      <p class="mb-3">Thank you for choosing StopShoppers. We appreciate your business!
      </p>
  </div>
  

  
  <div class="mt-3 p-div">
    <p><strong>Date Of Purchase :</strong> <%=order[0].orderedAt%></p>
    <p><strong>Shipping Address :-</strong> </p>
    <p style="max-width: 200px;line-height: 25px;">
      
      <%=order[0].address.firstname%> <%=order[0].address.lastname%>,
      <%=order[0].address.address%>,<%=order[0].address.state%>,
      <%=order[0].address.district%>,<%=order[0].address.city%>,
      <%=order[0].address.locality%>,<%=order[0].address.postalcode%>,
      <%=order[0].address.phone%>
    </p>
  </div>
  
  <div class="mt-3 border-bottom">
    <h4>Product Details</h4>
    <% order.forEach((item)=>{ %>
      <div class="d-flex border-bottom mt-3 ">
        <div class="mt-3">
          <img style="max-width:70px" src="/productImg/<%=item.productInfo.image[0]%>" alt="image of product">
        </div>
        
        <div class="ms-5 p-div">
          <p style="text-transform: capitalize;"><strong>Product Name :</strong> <%=item.productInfo.productName%></p>
          <p><strong>Product Quantity :</strong> <%=item.productsDetails.quantity%></p>
          <p><strong>Product Size :</strong> <%=item.productsDetails.size%></p>
        </div>
      </div>
    <%})%>
    <div class="mt-3 mb-3">
      <p><strong >Total Amount :</strong><span class="text-danger"> ₹<%=order[0].grandTotal%></span></p>
      <% if(order[0].walletMoney){%>
      <p><strong >Payment From Wallet :</strong><span class="text-danger"> ₹<%=order[0].walletMoney%></span></p>
      <% }%>
    </div>
    

  </div>
  
  <p class="text-secondary mt-3">If you have any questions or concerns regarding your order, please don't hesitate to contact us at <a href="">StopShoppers@gmail.com</a> .Our dedicated customer support team is here to assist you.</p>
  
    <div class="d-flex justify-content-end mt-3">
      <a href="/myOrders/<%=user._id%>">
      <button style="background-color: #b04fff;" class="btn text-white px-5 me-4">My orders</button>
    </a>
      <a href="/shopPage">
      <button style="background-color: #b04fff;" class="btn text-white px-5 ">Continue Shopping</button>
    </a>

    </div>
  
  
 
</div>
<%- include('../includes/usersPartials/userEnd.ejs') %>
